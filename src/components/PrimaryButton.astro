---
import Icon from 'astro-icon'
---

<a href="/cv-mark-teekman.pdf">
  <span class="text-gradient">CV</span>
  <Icon pack="ic" name="baseline-arrow-circle-right" />
</a>

<style>
  a {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    min-width: 150px;
    padding: 0.5rem 2rem;
    background: linear-gradient(45deg, #141414, #141414) padding-box,
      linear-gradient(
          to left,
          rgb(var(--primary-color)),
          rgb(var(--secondary-color))
        )
      border-box;
    background-size: 150%;
    background-position: 100%;
    border: 4px solid transparent;
    border-radius: 3rem;
    text-decoration: none;
    font-size: 1.5rem;
  }

  a:hover,
  a:focus {
    animation: button-gradient 2s ease infinite;
  }

  a:hover [astro-icon],
  a:focus [astro-icon] {
    margin-left: 8px;
  }

  [astro-icon] {
    width: 2rem;
    color: rgb(var(--secondary-color));
    transition: margin-left 0.3s ease;
  }

  @keyframes button-gradient {
    0% {
      background-position: 100%;
    }
    50% {
      background-position: 0%;
    }
    100% {
      background-position: 100%;
    }
  }
</style>
